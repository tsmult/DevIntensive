<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>
        <style name="icon.left" parent="icon">
            <item name="android:layout_gravity">top|left</item>
            <item name="android:layout_marginTop">@dimen/size_small_24</item>
            <item name="android:layout_marginLeft">@dimen/size_small_24</item>
        </style>
        <style name="icon.right" parent="icon">
            <item name="android:layout_gravity">top|right</item>
            <item name="android:layout_marginTop">@dimen/size_small_24</item>
            <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
        </style>

    <style name="edit_view_disabled">
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="HeaderBlock">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/grey</item>
    </style>

        <style name="HeaderText_Number">
            <item name="android:textStyle">bold</item>
            <item name="android:textColor">@color/grey_lite</item>
            <item name="android:textSize">@dimen/size_small_24</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        </style>

    <style name="HeaderText_Text">
        <item name="android:textColor">@color/grey_lite</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/spacing_normal_16</item>
        <item name="android:layout_margin">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
    </style>

    <style name="container">
                <item name="android:layout_width">0dp</item>
                <item name="android:layout_height">72dp</item>
                <item name="android:layout_weight">1</item>
                <item name="android:gravity">center</item>
                <item name="android:orientation">vertical</item>
    </style>

    <style name="text">
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:textColor">@color/white</item>

            </style>

        <style name="text.title" parent="text">
            <item name="android:textSize">20sp</item>
            <item name="android:textStyle">bold</item>
        </style>
















    <style name="HeaderContainer">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:orientation">horizontal</item>
                <item name="android:paddingTop">@dimen/spacing_normal_16</item>
                <item name="android:paddingBottom">@dimen/spacing_normal_16</item>
                <item name="android:layout_gravity">center_horizontal</item>
                <item name="android:background">@color/grey_lite</item>
    </style>

    <style name="DivingLine">
                <item name="android:layout_width">1dp</item>
                <item name="android:layout_height">match_parent</item>
                <item name="android:background">@color/grey_lite</item>
                <item name="android:paddingBottom">@dimen/spacing_normal_16</item>

    </style>





</resources>